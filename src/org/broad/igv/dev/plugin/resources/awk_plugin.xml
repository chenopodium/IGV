<!DOCTYPE igv_plugin SYSTEM "igv_plugin.dtd">
<igv_plugin api_version="alpha" plugin_version="0.1" name="awk"
            id="org.broadinstitute.igv.plugin.awk">
    <tool name="awk" default_path="awk" visible="false">
        <default>
            <arg name="Arguments" cmd_arg="" type="text" default=""/>
            <arg name="Track" cmd_arg="" type="feature_track"/>
            <parser format="bed"/>
        </default>

        <command name="Arbitrary Input" cmd="">
            <arg name="Arguments" cmd_arg="" type="longtext" default="{print}"/>
            <arg name="Track" cmd_arg="" type="feature_track"/>
        </command>
        <command name="Filter by size" cmd="">
            <arg name="Minimum" type="text" id="min" output="false"/>
            <arg name="Maximum" type="text" id="max" output="false"/>
            <!--
                We reference the min/max using the $(variable name)
            -->
            <arg name="Track" cmd_arg="{diff=$3-$2; if (diff &gt;= $min &amp;&amp; diff &lt;= $max) print;}"
                 type="feature_track"/>
        </command>

    </tool>
</igv_plugin>